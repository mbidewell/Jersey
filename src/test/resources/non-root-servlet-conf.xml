<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.mulesource.org/schema/mule/core/2.1"
       xmlns:jersey="http://www.mulesource.org/schema/mule/jersey/2.1"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.1"
       xmlns:servlet="http://www.mulesource.org/schema/mule/servlet/2.1"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.1.xsd
               http://www.mulesource.org/schema/mule/core/2.1 http://www.mulesource.org/schema/mule/core/2.1/mule.xsd
               http://www.mulesource.org/schema/mule/jersey/2.1 http://www.mulesource.org/schema/mule/jersey/2.1/mule-jersey.xsd
               http://www.mulesource.org/schema/mule/vm/2.1 http://www.mulesource.org/schema/mule/vm/2.1/mule-vm.xsd
               http://www.mulesource.org/schema/mule/servlet/2.1 http://www.mulesource.org/schema/mule/servlet/2.1/mule-servlet.xsd">

    <jersey:connector name="jersey"/>
    
    <servlet:connector name="servlet" servletUrl="http://localhost:63088/context/"/>
    
    <model name="BasicJerseyTest">
    
        <service name="helloWorldResource">
            <inbound>
                <inbound-endpoint address="jersey:servlet://base"/>
            </inbound>
            <component class="org.mule.transport.jersey.HelloWorldResource"/>
        </service>
        
    </model>

</mule>
        

        
